<%- include('partials/top') %>
<div class="pagecontent register">
  <div class="register-form">
    <h2>Register</h2>
    <form class="" action="/register" method="post">

      <div class="form-left">
        <div class="uk-margin">
          <div class="uk-inline">
            <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: user"></span>
            <input class="uk-input" type="text" name="firstName" value="<%= firstName%>" placeholder="First name">
          </div>
        </div>

        <div class="uk-margin">
          <div class="uk-inline">
            <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: users"></span>
            <input class="uk-input" type="text" name="lastName" value="<%= lastName%>" placeholder="Last name">
          </div>
        </div>

          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: mail"></span>
              <input class="uk-input" type="text" name="email" value="<%= email%>" placeholder="Email">
            </div>
          </div>


      </div>
      <div
       class="form-right">
        <div class="uk-margin">
          <div class="uk-inline">
            <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: tag"></span>
            <input class="uk-input" type="text" name="username" value="<%= username%>" placeholder="Username">
          </div>
        </div>



        <div class="uk-margin">
          <div class="uk-inline">
            <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
            <input class="uk-input" type="password" name="password" value="" placeholder="Password">
          </div>
        </div>
      </div>
      <button class="uk-button uk-button-primary" type="submit" name="button">Register</button>
    </form>
    <p><%= err %></p>
  </div>

</div>

<%- include('partials/bottom') %>
