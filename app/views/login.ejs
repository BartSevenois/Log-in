<%- include('partials/top') %>
  <div class="pagecontent login">
    <div class="login-form">
      <h2>Log in</h2>
      <form name="login" class="" action="/signin" onsubmit="return validateForm()" method="post">
        <p id="login-error"><%= message %></p>
        <div class="uk-margin">
          <div class="uk-inline">
            <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: user"></span>
            <input class="uk-input" type="text" name="username" value="<%= username%>" placeholder="Username">
          </div>
        </div>

        <div class="uk-margin">
          <div class="uk-inline">
            <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
            <input class="uk-input" type="password" name="password" value="" placeholder="Password">
          </div>
        </div>

        <button class="uk-button uk-button-primary" type="submit">Log in</button>
        <a href="/register">Register</a>
      </form>
    </div>
  </div>
<%- include('partials/bottom') %>
